    <ControlTemplate x:Key="btnGridHeader" TargetType="Button">
        <Grid>
            <Rectangle  Name="Base"    Fill="{TemplateBinding Background}" Opacity="0.8">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="3"/>
                </Rectangle.Effect>
            </Rectangle>

            <Rectangle Name="Top"    Opacity="0.8">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FFEFF9F9"/>
                        <GradientStop Offset="1"/>
                        <GradientStop Color="#DAF1F9F9" Offset="0.142"/>
                        <GradientStop Color="#22FCFEFE" Offset="0.197"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <!--<ContentPresenter HorizontalAlignment="Center" Style="{DynamicResource HeaderText}" VerticalAlignment="Center"></ContentPresenter>-->
            <TextBlock Text="{TemplateBinding  Property=Content}"  HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource HeaderText}"  ></TextBlock>
            <!--Style="{DynamicResource HeaderText}"-->
        </Grid>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="Base" Property="Fill" Value="{DynamicResource MouseHoverColor}" ></Setter>
            </Trigger>
            <Trigger Property="Button.IsPressed" Value="true">
                <Setter TargetName="Base" Property="Fill" Value="{DynamicResource MouseClickedColor}" ></Setter>
            </Trigger>
        </ControlTemplate.Triggers>

    </ControlTemplate>

