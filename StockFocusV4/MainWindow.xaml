                <Canvas Grid.Column="0">
                    <Image Source="/SF.png"  Height="68" VerticalAlignment="Center" HorizontalAlignment="Center" Canvas.Left="-24" Canvas.Top="4" Width="157"/>

                </Canvas>
                <Canvas Grid.Column="15" HorizontalAlignment="Right">
