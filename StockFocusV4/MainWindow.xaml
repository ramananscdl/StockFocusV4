                                        <DropShadowBitmapEffect></DropShadowBitmapEffect>
                                    </StackPanel.BitmapEffect>
                                    <StackPanel x:Name="stpProfiles">
                                    </StackPanel>
                                    <Separator Foreground="Gray"/>
